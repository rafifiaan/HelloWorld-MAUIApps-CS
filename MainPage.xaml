<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_HelloWorld.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.svg"
                SemanticProperties.Description="Logo Dotnet Bot"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Halo, Semua!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Klik tombol di bawah ini!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Perintah mengklik tombol"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Klik di sini!"
                SemanticProperties.Hint="Hitung berapa kali diklik"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
